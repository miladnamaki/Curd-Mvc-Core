@model IEnumerable<Item>
@{
    ViewData["Title"] = "Borrowed";
}

<h1>Borrowed</h1>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class=" text-primary"> Borrowed items list </h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Item" asp-action="Create">create new item</a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class=" table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th style="text-align:center">
                        Item Name
                    </th>
                    <th>
                        Borrower
                    </th>
                    <th>
                        lender
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%">@item.ItemName</td>
                        <td width="30%">@item.Borrower</td>
                        <td width="30%">@item.Lender</td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p> this not date fetch ! </p>
    }
</div>
