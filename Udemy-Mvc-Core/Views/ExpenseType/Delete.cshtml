@model ExpenseType
@{
    ViewData["Title"] = "ExpenseType-Delete";
}

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class=" text-black-50 p-3 bg-dark text-white"> Delete ExpenseType</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Name"></label>
                </div>
            </div>
            <div class=" form-group row">
                <div class="col-6">
                    <input asp-for="Name"  disabled class="form-control" />
                </div>
            </div>
            <div class=" form-group row">
                <div class="col-8 offset-2 row">
                    <div class="col">
                        <a class=" btn btn-success  w-75" asp-action="Index"> back</a>
                    </div>
                    <div class="col">
                        <input type="submit" class="btn btn-danger w-75" value="Delete" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}