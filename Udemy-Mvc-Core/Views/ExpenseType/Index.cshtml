@model IEnumerable<ExpenseType>
@{
    ViewData["Title"] = "ExpenseType";
}

<h1>Expense</h1>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class=" text-primary"> ExpenseType  list </h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="ExpenseType" asp-action="Create">create new ExpenseType</a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class=" table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th class="text-center">
                        ExpenseType Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr >
                        <td class="text-center" width="35%">@item.Name</td>
                        <td class="text-center" width="30%">
                            <div  class="w-100 btn-group" role="group" >
                                <a class="btn btn-warning mx-1" asp-controller="ExpenseType" asp-route-Id="@item.Id" asp-action="Update"> Update </a>
                                <a class="btn btn-danger mx-1 " asp-controller="ExpenseType"  asp-route-Id="@item.Id" asp-action="Delete"> Delete </a>
                            </div>
                        </td>
                        
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p> this not date fetch ! </p>
    }
</div>
