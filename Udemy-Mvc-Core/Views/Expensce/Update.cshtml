@model Expense
@{
    ViewData["Title"] = "Expense -update";
}

<form method="post" asp-action="UpdatePost">
    <input hidden asp-for="Id" />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class=" text-black-50 p-3 bg-dark text-white"> Update Expense</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="ExpenseName"></label>
                </div>
                <div class="col-6">
                    <label asp-for="Amount"></label>
                </div>
            </div>
            <div class=" form-group row">
                <div class="col-6">
                    <input asp-for="ExpenseName" class="form-control" />
                    <span asp-validation-for="ExpenseName" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>
            <div class=" form-group row">
                <div class="col-8 offset-2 row">
                    <div class="col">
                        <a class=" btn btn-danger  w-75" asp-action="Index"> back</a>
                    </div>
                    <div class="col">
                        <input type="submit" class="btn btn-info w-75" value="Update" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}