@model Udemy_Mvc_Core.Models.ViewModel.ExpenseVm
@{
    ViewData["Title"] = "Expense";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class=" text-black-50 p-3 bg-dark text-white"> Add Expense</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Expenses.ExpenseName"></label>
                </div>
                <div class="col-4">
                    <label asp-for="Expenses.Amount"></label>
                </div>
                <div class="col-4">
                    <label asp-for="Expenses.ExpenseTypeId"></label>
                </div>
            </div>
            <div class=" form-group row">
                <div class="col-4">
                    <input asp-for="Expenses.ExpenseName" class="form-control" />
                    <span asp-validation-for="Expenses.ExpenseName" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <input asp-for="Expenses.Amount" class="form-control" />
                    <span asp-validation-for="Expenses.Amount" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <select asp-for="Expenses.ExpenseTypeId" asp-items="@Model.TypeDrowDown" class="form-control">
                        <option selected>--Select Expense type --</option>
                    </select>

                    <span asp-validation-for="Expenses.ExpenseTypeId" class="text-danger"></span>
                </div>
            </div>
            <div class=" form-group row">
                <div class="col-8 offset-2 row">
                    <div class="col">
                        <a class=" btn btn-danger  w-75" asp-action="Index"> back</a>
                    </div>
                    <div class="col">
                        <input type="submit" class="btn btn-info w-75" value="Create" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}